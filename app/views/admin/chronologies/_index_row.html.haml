- action = index_row
%tr.data-row{:onclick => "document.location = '#{edit_path_for(action)}'"}
  %td.timestamp= format_date(action.created_at, false)
  %td{:class => action.class.to_s.underscore + '-label'}= action.class
  
  -if action.kind_of?(Idea)
    %td= truncate(action.inventor.name, :length => 20)
    %td
      %b= truncate(action.title, :length => 100, :separator => ' ')
      .detail= truncate(action.description, :length => 300, :separator => ' ')
        
  -elsif action.kind_of?(Comment)
    %td= truncate(action.author.name, :length => 20)
    %td
      %b
        Re:
        = truncate(action.idea.title, :length => 100, :separator => ' ')
      .detail= truncate(action.text, :length => 300, :separator => ' ')
      
  -elsif action.kind_of?(Vote)
    %td= truncate(action.user.name, :length => 20)
    %td
      %b
        Re:
        = truncate(action.idea.title, :length => 100, :separator => ' ')
